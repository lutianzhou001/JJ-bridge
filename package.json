{
  "name": "hudex-ca",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "postinstall": "truffle compile && yarn generate-types",
    "migrate": "tsc -p ./tsconfig.migrate.json --outDir ./migrations && truffle migrate",
    "typecheck": "tsc --noEmit",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@maticnetwork/eth-decoder": "0.0.2",
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.7.2",
    "@nestjs/mongoose": "^7.0.2",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/schedule": "^0.4.0",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/typeorm": "^6.2.0",
    "@truffle/contract-schema": "^3.2.2",
    "@types/request": "^2.48.4",
    "abi-decoder": "^2.2.2",
    "async-request": "^1.2.0",
    "bigi": "^1.4.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "coinstring": "^2.3.0",
    "ecurve": "^1.0.6",
    "ethereum-input-data-decoder": "^0.3.0",
    "ioredis": "^4.17.3",
    "mongoose": "^5.9.27",
    "mysql": "^2.17.1",
    "nestjs-redis": "^1.2.8",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.4",
    "truffle-typings": "^1.0.8",
    "typeorm": "^0.2.22",
    "web3": "^1.2.11",
    "web3-eth": "1.0.0-beta.26",
    "web3-eth-contract": "1.0.0-beta.26",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@typechain/truffle-v5": "^2.0.2",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "@types/web3": "^1.2.2",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "truffle": "^5.1.22",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typechain": "^2.0.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
